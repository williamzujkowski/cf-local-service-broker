FROM golang:1.24-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -o /minio-broker ./cmd/minio-broker

FROM alpine:3.21
RUN apk add --no-cache ca-certificates
COPY --from=builder /minio-broker /usr/local/bin/minio-broker
USER 65534:65534
ENTRYPOINT ["minio-broker"]
